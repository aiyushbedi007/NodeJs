<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="create-enquiry content">
    <form action="/enquirys/<%= enquiry._id %>" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <label for="title">Enquiry title:</label>
        <input type="text" id="title" name="title" value="<%= enquiry.title %>" required>
        <label for="snippet">Course Name:</label>
        <input type="text" id="snippet" name="snippet" value="<%= enquiry.snippet%>" required>
        <label for="body">Your Enquiry:</label>
        <textarea id="body" name="body" value="<%= enquiry.body%>" required></textarea>
        <button>Submit</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>